<!DOCTYPE html>
<html lang="pt-br">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Virtus</title>
    <link rel="icon" href="~/img/virtus-l.png" />
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css">
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/Virtus.styles.css" asp-append-version="true" />
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.3/font/bootstrap-icons.min.css">
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
</head>
<body>
    @{
        string buscar = (string)ViewData["Buscar"]!;
    }

    <header>
        <nav class="navbar navbar-expand-sm navbar-dark bg-dark border-bottom box-shadow py-2">
            <div class="container-fluid d-flex align-items-center justify-content-between w-100">
                <a class="navbar-brand d-flex align-items-center" asp-area="" asp-controller="Home" asp-action="Index">
                    <img src="~/img/virtus-p.png" height="40" class="me-2" />
                </a>

                <form asp-controller="Loja" asp-action="Index" method="get" class="search-bar mx-auto" role="search">
                    <button type="submit" class="btn-reset">
                    <i class="bi bi-search search-icon"></i>
                    </button>
                    <input type="search" name="buscar" placeholder="O que você está procurando?" value="@buscar" class="search-input" aria-label="Buscar" />
                </form>

                <ul class="navbar-nav d-flex align-items-center">
                    <li class="nav-item me-3">
                        <a class="nav-link text-white position-relative" asp-area="" asp-controller="Carrinho" asp-action="Index">
                            <div id="cartIcon">
                            <img src="~/img/bag.png" height="24" />
                            <span id="CartSize" class="badge rounded-pill bg-light text-dark position-absolute top-2 start-100 translate-middle">0</span>
                            </div>
                        </a>
                    </li>

                    @{
                        var nome = Context.Session.GetString("UsuarioNome");
                        var sobrenome = Context.Session.GetString("UsuarioSobrenome");
                        var tipo = Context.Session.GetString("UsuarioTipo");
                    }

                    <li class="nav-item dropdown">
                        <a class="nav-link dropdown-toggle text-white" href="#" role="button" data-bs-toggle="dropdown" aria-expanded="false">
                            <img src="~/img/user.png" height="24" />
                        </a>
                        <ul class="dropdown-menu dropdown-menu-end">
                            @if (!string.IsNullOrEmpty(nome))
                            {
                                <li>
                                    <span class="dropdown-item-text">
                                        Olá @(nome + " " + sobrenome)@(tipo == "admin" ? " (Admin)" : "")!
                                    </span>
                                </li>
                                <li><hr class="dropdown-divider" /></li>

                                @if (tipo?.ToLower() == "admin")
                                {
                                    <li><a class="dropdown-item" asp-controller="Produto" asp-action="Index">Produtos</a></li>
                                    <li><a class="dropdown-item" asp-controller="PedidoAdm" asp-action="Index">Pedidos</a></li>
                                }
                                else
                                {
                                    <li><a class="dropdown-item" asp-controller="PedidoUsuario" asp-action="Index">Meus Pedidos</a></li>
                                }

                                <li><a class="dropdown-item" asp-controller="Usuario" asp-action="Perfil">Perfil</a></li>
                                <li><hr class="dropdown-divider" /></li>
                                <li><a class="dropdown-item" asp-controller="Usuario" asp-action="Logout">Sair</a></li>
                            }
                            else
                            {
                                <li><a class="dropdown-item" asp-controller="Usuario" asp-action="Login">Login</a></li>
                                <li><hr class="dropdown-divider" /></li>
                                <li><a class="dropdown-item" asp-controller="Usuario" asp-action="Registrar">Registrar</a></li>
                            }
                        </ul>
                    </li>

                    </ul>
            </div>
        </nav>
    </header>


    @if (ViewData["PagInicial"] == null)
    {
        <div class="container mt-3">
            <main role="main" class="pb-3">
                @RenderBody()
            </main>
        </div>
    }
    else
    {
        @RenderBody()
    }

    <footer class="footer text-white">
        <div class="footer-content">
            <div class="row text-center text-md-start d-flex justify-content-around w-100">
                <div class="col-md-4 mb-4 mb-md-0 text-center">
                    <h6 class="text-uppercase mb-3">Redes Sociais</h6>
                    <div class="d-flex justify-content-center">
                    <a href="#" class="text-white me-3 fs-5"><i class="bi bi-instagram"></i></a>
                    <a href="#" class="text-white me-3 fs-5"><i class="bi bi-tiktok"></i></a>
                    <a href="#" class="text-white fs-5"><i class="bi bi-youtube"></i></a>
                    </div>
                </div>

                <div class="col-md-4 mb-4 mb-md-0 text-center">
                    <h6 class="text-uppercase mb-3">Contato</h6>
                    <p class="mb-1">Endereço: Rua Camândula, 112</p>
                    <p class="mb-1">Telefone: (11) 96544-4655</p>
                    <p class="mb-0">Email: virtus@gmail.com</p>
                </div>

                <div class="col-md-4 mb-4 mb-md-0 text-center">
                    <h6 class="text-uppercase mb-3">Formas de Pagamento</h6>
                    <div class="d-flex justify-content-center align-items-center gap-2">
                        <img src="~/img/master.png" alt="Mastercard" width="50">
                        <img src="~/img/elo.png" alt="Elo" width="50">
                        <img src="~/img/visa.png" alt="Visa" width="50">
                        <img src="~/img/hiper.png" alt="Hipercard" width="50">
                        <img src="~/img/pix.png" alt="Pix" width="50">
                    </div>
                </div>
            </div>
        </div>

        <div class="footer-bottom text-center py-2">
            &copy; 2025 Virtus. Todos os direitos reservados.
        </div>
    </footer>

    <script src="~/js/site.js" asp-append-version="true"></script>
    <script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/jquery.mask/1.14.16/jquery.mask.min.js"></script>
    <script src="~/js/formatar.js" asp-append-version="true"></script>
    <script src="~/js/funcionalidades.js" asp-append-version="true"></script>

    @section Scripts {
        <partial name="_ValidationScriptsPartial" />
    }
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
