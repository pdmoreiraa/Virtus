<!DOCTYPE html>
<html lang="pt-br">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Virtus</title>
    <link rel="icon" href="~/img/virtus-l.png" />
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/Virtus.styles.css" asp-append-version="true" />
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.3/font/bootstrap-icons.min.css">
</head>
<body>
    <header>
        <nav class="navbar navbar-expand-sm navbar-dark bg-dark border-bottom box-shadow py-2">
            <div class="container d-flex align-items-center justify-content-between">
                <a class="navbar-brand d-flex align-items-center" asp-area="" asp-controller="Home" asp-action="Index">
                    <img src="~/img/virtus-p.png" height="40" class="me-2" />
                </a>

                <form asp-controller="Loja" asp-action="Buscar" method="get" class="search-bar mx-auto">
                    <i class="bi bi-search search-icon"></i>
                    <input type="text" name="q" placeholder="O que você está procurando?" class="search-input" />
                </form>

                <ul class="navbar-nav d-flex align-items-center">
                    <li class="nav-item me-3">
                        <a class="nav-link text-white position-relative" asp-area="" asp-controller="Carrinho" asp-action="Index">
                            <img src="~/img/bag.png" height="24" />
                            <span id="CartSize" class="badge rounded-pill bg-light text-dark position-absolute top-2 start-100 translate-middle">0</span>
                        </a>
                    </li>

                    @{
                        var nome = Context.Session.GetString("UsuarioNome");
                        var sobrenome = Context.Session.GetString("UsuarioSobrenome");
                        var tipo = Context.Session.GetString("UsuarioTipo");
                    }

                    @if (!string.IsNullOrEmpty(nome))
                    {
                        <li class="nav-item dropdown">
                            <a class="nav-link dropdown-toggle text-white" href="#" role="button" data-bs-toggle="dropdown" aria-expanded="false">
                                <img src="~/img/user.png" height="24" />
                            </a>
                            <ul class="dropdown-menu dropdown-menu-end">
                                <li><span class="dropdown-item-text">Olá @(nome + " " + sobrenome)@(tipo == "admin" ? " (Admin)" : "")!</span></li>
                                @if (tipo?.ToLower() == "admin")
                                {
                                    <li><a class="dropdown-item" asp-controller="Produto" asp-action="Index">Produtos</a></li>
                                }
                                <li><a class="dropdown-item" asp-controller="Usuario" asp-action="Perfil">Perfil</a></li>
                                <li><hr class="dropdown-divider" /></li>
                                <li><a class="dropdown-item" asp-controller="Usuario" asp-action="Logout">Sair</a></li>
                            </ul>
                        </li>
                    }
                    else
                    {
                        <li class="nav-item dropdown">
                            <a class="nav-link dropdown-toggle text-white" href="#" role="button" data-bs-toggle="dropdown" aria-expanded="false">
                                <img src="~/img/user.png" height="24" />
                            </a>
                            <ul class="dropdown-menu dropdown-menu-end">
                                <li><a class="dropdown-item" asp-controller="Usuario" asp-action="Login">Login</a></li>
                                <li><hr class="dropdown-divider" /></li>
                                <li><a class="dropdown-item" asp-controller="Usuario" asp-action="Registrar">Registrar</a></li>
                            </ul>
                        </li>
                    }
                </ul>
            </div>
        </nav>

        <nav class="menu-categorias">
            <ul>
                <li><a asp-controller="Loja" asp-action="Categoria" asp-route-nome="Feminino">Feminino</a></li>
                <li><a asp-controller="Loja" asp-action="Categoria" asp-route-nome="Masculino">Masculino</a></li>
                <li><a asp-controller="Loja" asp-action="Categoria" asp-route-nome="Esporte">Esporte</a></li>
                <li><a asp-controller="Loja" asp-action="Categoria" asp-route-nome="Infantil">Infantil</a></li>
                <li><a asp-controller="Loja" asp-action="Categoria" asp-route-nome="Marcas">Marcas</a></li>
            </ul>
        </nav>

    </header>
    @if (ViewData["PagInicial"] == null)
    {
        <div class="container mt-3">
            <main role="main" class="pb-3">
                @RenderBody()
            </main>
        </div>
    }
    else
    {
        @RenderBody()
    }

    <footer class="footer text-white">
        <div class="footer-content">
            <div class="row text-center text-md-start">
                <div class="col-md-4 mb-4 mb-md-0">
                    <h6 class="text-uppercase mb-3">Redes Sociais</h6>
                    <a href="#" class="text-white me-3 fs-5"><i class="bi bi-instagram"></i></a>
                    <a href="#" class="text-white me-3 fs-5"><i class="bi bi-tiktok"></i></a>
                    <a href="#" class="text-white fs-5"><i class="bi bi-youtube"></i></a>
                </div>

                <div class="col-md-4 mb-4 mb-md-0">
                    <h6 class="text-uppercase mb-3">Contato</h6>
                    <p class="mb-1">Endereço: blablabla blabla</p>
                    <p class="mb-1">Telefone: (xx) xxxx-xxxx</p>
                    <p class="mb-0">Email: blablabla@gmail.com</p>
                </div>

                <div class="col-md-4">
                    <h6 class="text-uppercase mb-3">Formas de Pagamento</h6>
                    <div class="d-flex justify-content-center justify-content-md-start align-items-center gap-2">
                        <img src="~/img/mastercard.png" alt="Mastercard" width="45" height="28">
                        <img src="~/img/visa.png" alt="Visa" width="45" height="28">
                        <img src="~/img/hipercard.png" alt="Hipercard" width="45" height="28">
                        <img src="~/img/pix.png" alt="Pix" width="45" height="28">
                    </div>
                </div>
            </div>
        </div>

        <div class="footer-bottom text-center py-2">
            &copy; 2025 Virtus. Todos os direitos reservados.
        </div>
    </footer>

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
