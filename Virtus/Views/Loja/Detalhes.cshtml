@model Virtus.Models.Produto

<div class="container my-5">
    <div class="row g-5">
        <div class="col-lg-6">
            <div class="d-flex">
                <!-- Imagem principal -->
                <div class="flex-grow-1">
                    <img src="/img/@Model.Imagens.FirstOrDefault()?.Url"
                         id="produto-@Model.Id"
                         class="img-fluid rounded shadow produto-img"
                         style="width:500px; height:auto; object-fit: contain;">
                </div>

                <!-- Miniaturas -->
                <div class="d-flex flex-column ms-3">
                    @foreach (var img in Model.Imagens.Take(4))
                    {
                        <img src="/img/@img.Url" class="img-thumbnail mb-2 thumb" data-id="@Model.Id" style="width:80px; height:80px; object-fit: contain; cursor:pointer;">
                    }
                </div>
            </div>
        </div>

        <!-- Informações -->
        <div class="col-lg-6">
            <h3 class="fw-bold">@Model.Nome</h3>
            <p class="text-muted mb-1">@Model.Tipo</p>
            <p class="text-secondary">@Model.Descricao</p>

            <div class="mb-3">
                <p class="h4 text-primary fw-bold mb-0">R$ @Model.Preco.ToString("F2") à vista</p>
            </div>

            <button type="button" class="btn btn-dark smooth-btn btn-sm" onclick="adicionarAoCarrinho(this, @Model.Id)">
                Adicionar ao Carrinho <i class="bi bi-cart4"></i>
            </button>
        </div>

    </div>
</div>



<script>
    document.querySelectorAll('.thumb').forEach(t => {
        t.addEventListener('click', e => {
            let produtoId = e.target.dataset.id;
            let mainImg = document.getElementById(`produto-${produtoId}`);
                if (mainImg) {
                    mainImg.src = e.target.src;
                }
        });
    });
</script>
