@model Virtus.Models.Carrinho


<div class="row min-vh-100">
    <div class="col-md-8 p-3">
        <h4>Carrinho de Compras</h4>
        <hr />

        @if (ViewBag.ErrorMessage != null)
        {
            <div class="alert alert-warning alert-dismissible fade show mt-4" role="alert">
                <strong>@ViewBag.ErrorMessage</strong>
                <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
            </div>
        }

        <table class="table align-middle">
            <tbody class="carrinho">
                @foreach (var item in Model.Itens)
                {
                    <tr class="border border-dark rounded-3 p-3 mt-3">
                        <td>
                            <div class="d-flex justify-content-between">
                            <img src="@Url.Content("~/img/" + item.Imagem?.Url)" width="100" class="rounded" alt="@item.Produto.Nome"/>

                            <h4>@item.Produto.Nome</h4>
                            <p>
                                Marca: @item.Produto.Marca<br>
                                Categoria: @item.Produto.Categoria<br>
                                Preço: R$ @item.PrecoUnitario
                            </p>
                            </div>
                        <div style="white-space:nowrap">
                                <button type="button" class="btn btn-light border border-dark rounded smooth-btn btn-sm"
                                    onclick="diminuir(@item.Produto.Id)">
                                -
                            </button>
                            <span class="border rounded-3 p-2 m-1">@item.Quantidade</span>
                                <button type="button" class="btn btn-light border border-dark rounded smooth-btn btn-sm"
                                    onclick="aumentar(@item.Produto.Id)">
                                +
                            </button>
                        </div>
                        </td>

                        <td>
                            <i class="bi bi-trash h4" style="cursor: pointer" onclick="remover(@item.Produto.Id)"></i>
                            R$ @(item.PrecoUnitario * item.Quantidade)
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>

    <div class="col-md-4">
        <div class="border rounded-3 p-3 bg-light sticky-top slide-left" >
            <h4>Resumo do Pedido</h4>
            <hr />

            @using Microsoft.AspNetCore.Http

            @{
                var usuarioLogado = Context.Session.GetString("UsuarioNome"); 
            }

            @if (!string.IsNullOrEmpty(usuarioLogado))
            {
                <form>

                    <div class="row">
                        <div class="col">
                            <p>Subtotal:</p>
                        </div>
                        <div class="col">
                            <p class="text-end">R$ @Model.Subtotal.ToString("F2")</p>
                        </div>
                    </div>

                    <button type="submit" class="btn btn-dark w-100 mt-3 smooth-btn" asp-controller="Carrinho" asp-action="Infos">
                        Finalizar Compra
                    </button>
                    <button class="btn btn-light border border-dark rounded w-100 mt-3 smooth-btn" asp-controller="Home" asp-action="Index">
                        Continuar Olhando
                    </button>
                </form>
            }
            else
            {
                <div class="row">
                    <div class="col d-grid">
                        <a class="btn btn-dark w-100 mt-3 smooth-btn" asp-controller="Usuario" asp-action="Cadastrar">Cadastrar</a>
                    </div>
                    <div class="col d-grid">
                        <a class="btn btn-light border border-dark rounded w-100 mt-3 smooth-btn" asp-controller="Usuario" asp-action="Login">Login</a>
                    </div>
                </div>
            }



        </div>
    </div>
</div>
    