@model Virtus.Models.Carrinho
@{
    ViewData["Title"] = "Confirmação de Pagamento";
}

<div class="container py-4">
    <div class="card shadow-sm border-2 border-primary-subtle rounded-3 mx-auto" style="max-width: 600px;">
        <div class="card-body text-center">

            <!-- Ícone de confirmação -->
            <div class="mb-4">
                <i class="bi bi-credit-card-fill text-primary fs-1"></i>
            </div>

            <!-- Mensagem principal -->
            <h4 class="fw-bold mb-3">Pagamento em processamento</h4>
            <p class="mb-4 text-muted">Aguarde, dentro de alguns instantes seu pagamento será confirmado.</p>

            <!-- Detalhes do pedido -->
            <div class="border rounded-3 bg-light p-3 text-start mb-4">
                <p class="mb-2"><strong>Número do Pedido:</strong> @ViewBag.PedidoId</p>
                <p class="mb-2"><strong>Método de Pagamento:</strong> Cartão de Crédito</p>
                <p class="mb-2"><strong>Valor dos Itens:</strong> R$ @Model.Subtotal.ToString("F2")</p>
                <p class="mb-2"><strong>Taxa de Entrega:</strong> R$ @Model.TaxaEntrega.ToString("F2")</p>
                <p class="mb-0">
                    <strong>Valor Total:</strong>
                    <span class="text-success fw-bold">R$ @Model.Total.ToString("F2")</span>
                </p>
            </div>

            <!-- Formulário de confirmação -->
            <form asp-action="ConfirmarPagamentoCartao" asp-controller="Carrinho" method="post">
                <input type="hidden" name="pedidoId" value="@ViewBag.PedidoId" />
                <button type="submit" class="btn btn-primary px-4 py-2">
                    Retornar para a tela inicial
                </button>
            </form>

        </div>
    </div>
</div>

<style>
    .border-primary-subtle {
        border-color: #0d6efd55 !important;
    }
</style>
