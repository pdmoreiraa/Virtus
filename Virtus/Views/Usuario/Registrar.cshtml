@model Usuario
@{
}

<div class="row">
    <div class="col-lg-6 mx-auto rounded border p-4">
        <h2 class="text-center mb-3">Registrar</h2>
        <hr />

        <div asp-validation-summary="ModelOnly" class="text-danger" role="alert"></div>

        <form method="post" id="perfilForm">
            <div class="row mb-3">
                <label class="col-sm-4 col-form-label">Email*</label>
                <div class="col-sm-8">
                    <input class="form-control" asp-for="UsuEmail" placeholder="Digite seu email">
                    <span asp-validation-for="UsuEmail" class="text-danger"></span>
                </div>
            </div>

            <div class="row mb-3">
                <label class="col-sm-4 col-form-label">Nome*</label>
                <div class="col-sm-8">
                    <input class="form-control" asp-for="UsuNome" placeholder="Digite seu nome">
                    <span asp-validation-for="UsuNome" class="text-danger"></span>
                </div>
            </div>

            <div class="row mb-3">
                <label class="col-sm-4 col-form-label">Sobrenome*</label>
                <div class="col-sm-8">
                    <input class="form-control" asp-for="UsuSobrenome" placeholder="Digite seu sobrenome">
                    <span asp-validation-for="UsuSobrenome" class="text-danger"></span>
                </div>
            </div>

            <div class="row mb-3">
                <label class="col-sm-4 col-form-label">Telefone*</label>
                <div class="col-sm-8">
                    <input class="form-control" type="text" id="Telefone" name="UsuTelefone" asp-for="UsuTelefone" maxlength="15" placeholder="(11)99999-9999" />
                    <span asp-validation-for="UsuTelefone" class="text-danger"></span>
                </div>
            </div>

            <div class="row mb-3">
                <label class="col-sm-4 col-form-label">CPF*</label>
                <div class="col-sm-8">
                    <input class="form-control" type="text" id="CPF" name="UsuCPF" asp-for="UsuCPF" maxlength="14" placeholder="000.000.000-00"/>
                    <span asp-validation-for="UsuCPF" class="text-danger"></span>
                </div>
            </div>

            <div class="row mb-3">
                <label class="col-sm-4 col-form-label">Senha*</label>
                <div class="col-sm-8">
                    <div class="password-container">
                        <input class="form-control" type="password" id="senha" asp-for="UsuSenha" placeholder="Digite sua senha">
                        <i class="bi bi-eye toggle-visibility" id="toggleSenha"></i>
                    </div>
                    <span asp-validation-for="UsuSenha" class="text-danger"></span>
                </div>
            </div>

            <div class="row mb-3">
                <label class="col-sm-4 col-form-label">Confirmar Senha*</label>
                <div class="col-sm-8">
                    <div class="password-container">
                        <input class="form-control" id="confirmarSenha" type="password" asp-for="UsuConfirmarSenha" placeholder="Digite sua senha novamente">
                        <i class="bi bi-eye toggle-visibility" id="toggleConfirmarSenha"></i>
                    </div>
                    <span asp-validation-for="UsuConfirmarSenha" class="text-danger"></span>
                </div>
            </div>


            <div class="row mb-3">
                <div class="offset-sm-4 col-sm-4 d-grid">
                    <button type="submit" class="btn btn-dark w-100 mt-3 smooth-btn">Registrar</button>
                </div>
                <div class="col-sm-4 d-grid">
                    <a class="btn btn-light border border-dark rounded w-100 mt-3 smooth-btn" asp-controller="Home" asp-action="Index" role="button">
                        Cancelar
                    </a>
                </div>
            </div>
        </form>
    </div>
</div>

