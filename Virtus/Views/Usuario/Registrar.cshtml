@model Usuario
@{
}

<div class="row">
    <div class="col-lg-6 mx-auto rounded border p-4">
        <h2 class="text-center mb-3">Registrar</h2>
        <hr />

        <div asp-validation-summary="ModelOnly" class="text-danger" role="alert"></div>

        <form method="post">
            <div class="row mb-3">
                <label class="col-sm-4 col-form-label">Email*</label>
                <div class="col-sm-8">
                    <input class="form-control" asp-for="Email">
                    <span asp-validation-for="Email" class="text-danger"></span>
                </div>
            </div>

            <div class="row mb-3">
                <label class="col-sm-4 col-form-label">Nome*</label>
                <div class="col-sm-8">
                    <input class="form-control" asp-for="Nome">
                    <span asp-validation-for="Nome" class="text-danger"></span>
                </div>
            </div>

            <div class="row mb-3">
                <label class="col-sm-4 col-form-label">Sobrenome*</label>
                <div class="col-sm-8">
                    <input class="form-control" asp-for="Sobrenome">
                    <span asp-validation-for="Sobrenome" class="text-danger"></span>
                </div>
            </div>

            <div class="row mb-3">
                <label class="col-sm-4 col-form-label">Telefone*</label>
                <div class="col-sm-8">
                    <input class="form-control" type="text" id="Telefone" name="Telefone" maxlength="15" placeholder="(11)99999-9999" asp-for="Telefone"/>
                    <span asp-validation-for="Telefone" class="text-danger"></span>
                </div>
            </div>

            <div class="row mb-3">
                <label class="col-sm-4 col-form-label">CPF*</label>
                <div class="col-sm-8">
                    <input class="form-control" type="text" id="CPF" name="CPF" maxlength="14" placeholder="000.000.000-00" asp-for="CPF" />
                    <span asp-validation-for="CPF" class="text-danger"></span>
                </div>
            </div>

            <div class="row mb-3">
                <label class="col-sm-4 col-form-label">Senha*</label>
                <div class="col-sm-8">
                    <input class="form-control" type="password" asp-for="Senha">
                    <span asp-validation-for="Senha" class="text-danger"></span>
                </div>
            </div>

            <div class="row mb-3">
                <label class="col-sm-4 col-form-label">Confirmar Senha*</label>
                <div class="col-sm-8">
                    <input class="form-control" type="password" asp-for="ConfirmarSenha">
                    <span asp-validation-for="ConfirmarSenha" class="text-danger"></span>
                </div>
            </div>


            <div class="row mb-3">
                <div class="offset-sm-4 col-sm-4 d-grid">
                    <button type="submit" class="btn btn-primary">Registrar</button>
                </div>
                <div class="col-sm-4 d-grid">
                    <a class="btn btn-outline-primary" asp-controller="Home" asp-action="Index" role="button">
                        Cancel
                    </a>
                </div>
            </div>
        </form>
    </div>
</div>

@section Scripts {
    <script>
        document.addEventListener("DOMContentLoaded", function () {
            const tel = document.getElementById("Telefone");
            const cpf = document.getElementById("CPF");

            // Máscara telefone -> (11)99999-9999
            tel.addEventListener("input", function () {
                let v = this.value.replace(/\D/g, "");
                if (v.length > 11) v = v.slice(0, 11);
                if (v.length > 6) this.value = `(${v.slice(0,2)})${v.slice(2,7)}-${v.slice(7)}`;
                else if (v.length > 2) this.value = `(${v.slice(0,2)})${v.slice(2)}`;
                else this.value = v;
            });

            // Máscara CPF -> 000.000.000-00
            cpf.addEventListener("input", function () {
                let v = this.value.replace(/\D/g, "");
                if (v.length > 11) v = v.slice(0, 11);
                if (v.length > 9) this.value = `${v.slice(0,3)}.${v.slice(3,6)}.${v.slice(6,9)}-${v.slice(9)}`;
                else if (v.length > 6) this.value = `${v.slice(0,3)}.${v.slice(3,6)}.${v.slice(6)}`;
                else if (v.length > 3) this.value = `${v.slice(0,3)}.${v.slice(3)}`;
                else this.value = v;
            });
        });
    </script>

    <!-- Scripts de validação do ASP.NET -->
    <partial name="_ValidationScriptsPartial" />
}
