@model SenhaNova

<div class="mx-auto rounded border p-4" style="width: 500px">
	<h2 class="text-center mb-3">Editar Senha</h2>
	<hr />

	@if (ViewBag.ErrorMessage != null)
	{
		<div class='alert alert-danger alert-dismissible fade show' role='alert'>
			<strong>@ViewBag.ErrorMessage</strong>
			<button type='button' class='btn-close' data-bs-dismiss='alert' aria-label='Close'></button>
		</div>
	}
	else if (ViewBag.SuccessMessage != null)
	{
		<div class='alert alert-success alert-dismissible fade show' role='alert'>
			<strong>@ViewBag.SuccessMessage</strong>
			<button type='button' class='btn-close' data-bs-dismiss='alert' aria-label='Close'></button>
		</div>
	}

	<form method="post">
		<div class="row mb-2">
			<label class="col-sm-4 col-form-label">Senha Atual</label>
			<div class="col-sm-8">
				<div class="password-container">
				<input class="form-control" id="senha" type="password" asp-for="SenhaAtual">
				<i class="bi bi-eye toggle-visibility" id="toggleSenha"></i>
			</div>
				<span asp-validation-for="SenhaAtual" class="text-danger"></span>
			</div>
		</div>

		<div class="row mb-2">
			<label class="col-sm-4 col-form-label">Nova Senha</label>
			<div class="col-sm-8">
				<div class="password-container">
				<input class="form-control" id="novaSenha" type="password" asp-for="NovaSenha">
				<i class="bi bi-eye toggle-visibility" id="toggleNovaSenha"></i>
				</div>
				<span asp-validation-for="NovaSenha" class="text-danger"></span>
			</div>
		</div>

		<div class="row mb-2">
			<label class="col-sm-4 col-form-label">Confirmar Senha</label>
			<div class="col-sm-8">
				<div class="password-container">
				<input class="form-control" id="confirmarSenha" type="password" asp-for="ConfirmarSenha">
					<i class="bi bi-eye toggle-visibility" id="toggleConfirmarSenha"></i>
				</div>
				<span asp-validation-for="ConfirmarSenha" class="text-danger"></span>
			</div>
		</div>

		<div class="row">
			<div class="offset-sm-4 col d-grid">
				<button type="submit" class="btn btn-dark w-100 mt-3 smooth-btn">Submit</button>
			</div>
			<div class="col d-grid">
				<a class="btn btn-light border border-dark rounded w-100 mt-3 smooth-btn" asp-controller="Usuario" asp-action="Perfil">Cancelar</a>
			</div>
		</div>
	</form>
</div>