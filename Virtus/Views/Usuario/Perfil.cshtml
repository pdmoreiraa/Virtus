@model Perfil

@{
    ViewData["Title"] = "Perfil";
}

<div class="row">
    <div class="col-md-8 mx-auto rounded border p-4">
        <h2 class="mb-3">Perfil do Usuário</h2>
        <hr />

        @if (ViewBag.ErrorMessage != null)
        {
            <div class='alert alert-danger alert-dismissible fade show' role='alert'>
                <strong>@ViewBag.ErrorMessage</strong>
                <button type='button' class='btn-close' data-bs-dismiss='alert' aria-label='Close'></button>
            </div>
        }
        else if (ViewBag.SuccessMessage != null)
        {
            <div class='alert alert-success alert-dismissible fade show' role='alert'>
                <strong>@ViewBag.SuccessMessage</strong>
                <button type='button' class='btn-close' data-bs-dismiss='alert' aria-label='Close'></button>
            </div>
        }

        <div class="row mb-2">
            <div class="col-sm-4 fw-bold">Nome</div>
            <div class="col-sm-8">@Model.Nome</div>
        </div>

        <div class="row mb-2">
            <div class="col-sm-4 fw-bold">Sobrenome</div>
            <div class="col-sm-8">@Model.Sobrenome</div>
        </div>

        <div class="row mb-2">
            <div class="col-sm-4 fw-bold">Email</div>
            <div class="col-sm-8">@Model.Email</div>
        </div>

        <div class="row mb-2">
            <div class="col-sm-4 fw-bold">Telefone</div>
            <div class="col-sm-8">@Model.Telefone</div>
        </div>

        <div class="row mb-2">
            <div class="col-sm-4 fw-bold">CPF</div>
            <div class="col-sm-8">@Model.CPF</div>
        </div>

        <div class="row mb-2">
            <div class="col-sm-4 fw-bold">Tipo de Usuário</div>
            <div class="col-sm-8 text-capitalize">@Model.Tipo</div>
        </div>

        <hr />

        <div>
            <button type="button" class="btn btn-primary btn-sm" data-bs-toggle="modal" data-bs-target="#EditarPerfil">
                Editar Perfil
            </button>
            <a class="btn btn-warning btn-sm" asp-controller="Usuario" asp-action="Senha">Editar Senha</a>
        </div>
    </div>
</div>

<!-- Modal de Edição -->
<div class="modal fade" id="EditarPerfil" tabindex="-1" aria-hidden="true">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <h1 class="modal-title fs-5">Editar Perfil</h1>
                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>
            <div class="modal-body">
                <form asp-action="Perfil" method="post">
                    <input type="hidden" asp-for="Id" />

                    <div class="row mb-2">
                        <label class="col-sm-4 col-form-label">Nome</label>
                        <div class="col-sm-8">
                            <input class="form-control" asp-for="Nome" />
                            <span asp-validation-for="Nome" class="text-danger"></span>
                        </div>
                    </div>

                    <div class="row mb-2">
                        <label class="col-sm-4 col-form-label">Sobrenome</label>
                        <div class="col-sm-8">
                            <input class="form-control" asp-for="Sobrenome" />
                            <span asp-validation-for="Sobrenome" class="text-danger"></span>
                        </div>
                    </div>

                    <div class="row mb-2">
                        <label class="col-sm-4 col-form-label">Email</label>
                        <div class="col-sm-8">
                            <input class="form-control" asp-for="Email" />
                            <span asp-validation-for="Email" class="text-danger"></span>
                        </div>
                    </div>

                    <div class="row mb-2">
                        <label class="col-sm-4 col-form-label">Telefone</label>
                        <div class="col-sm-8">
                            <input class="form-control" id="Telefone" asp-for="Telefone" />
                            <span asp-validation-for="Telefone" class="text-danger"></span>
                        </div>
                    </div>

                    <div class="row mb-2">
                        <label class="col-sm-4 col-form-label">CPF</label>
                        <div class="col-sm-8">
                            <input class="form-control" id="CPF" asp-for="CPF" />
                            <span asp-validation-for="CPF" class="text-danger"></span>
                        </div>
                    </div>

                    <div class="row">
                        <div class="offset-sm-4 col-sm-8">
                            <button type="submit" class="btn btn-primary">Salvar</button>
                        </div>
                    </div>
                </form>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Fechar</button>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/jquery.mask/1.14.16/jquery.mask.min.js"></script>
    <script>
        $(document).ready(function () {
            $('#Telefone').mask('(00)00000-0000');
            $('#CPF').mask('000.000.000-00');

            $('#perfilForm').on('submit', function () {
                // Remove máscara antes de enviar
                $('#Telefone').val($('#Telefone').val().replace(/\D/g, ''));
                $('#CPF').val($('#CPF').val().replace(/\D/g, ''));
            });
        });
    </script>
}